{
	"extends": [
		"config:base",
	],
	"rangeStrategy": "replace", // Change requirement only when necessary.
	"assigneesFromCodeOwners": true,
	"reviewersFromCodeOwners": true,
	"separateMultipleMajor": true,
	"rollbackPrs": true,
	"packageRules": [
		{
			"matchUpdateTypes": [
				"minor",
				"patch",
				"pin",
				"digest",
			],
			"automerge": true
		},
		{
			"matchDepTypes": [
				"devDependencies",
			],
			"automerge": true,
		},
	],
}
